<h3>ALL Users</h3>


<table class="table table-bordered">
  <thead>
    <tr>
    	<th>Id</th>
    	<th>Name</th>
      	<th>Email</th>
    </tr>
  </thead>

  <tbody>
  	<% @users.each do |user| %>
      <tr>
      	<td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
      </tr>
  </tbody>
    <% end %>
</table>

